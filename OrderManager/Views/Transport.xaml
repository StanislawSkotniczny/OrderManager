<Page x:Class="OrderManager.Views.Transport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderManager.Views"
      mc:Ignorable="d" 
     d:DesignHeight="600" d:DesignWidth="850"
      Background="#778899"
      Title="Transport" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label 
          Grid.Row="0" 
            Content="Vehicles"
            Foreground="White"
            Margin="228,20,244,25"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center" 
            />


        <Button  
            Grid.Row="0" 
            Width="150"
            Height="40" 
            Margin="446,15,26,25"
            Background="Green"
            Foreground="White"
            FontSize="18"
            FontWeight="SemiBold" Click="Button_Click" 
            >Add Vechicle</Button>

        <StackPanel Grid.Row="1" Margin="10,10,26,10" Background="Black" Orientation="Vertical" Name="TransportList"/>

    </Grid>
</Page>
